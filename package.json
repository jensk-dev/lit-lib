{
  "name": "lit-lib",
  "description": "A lit component library stub using vite",
  "private": true,
  "version": "0.0.0",
  "author": {
    "email": "contact@john.doe",
    "name": "John Doe",
    "url": "https://github.com/john-doe"
  },
  "type": "module",
  "main": "./index.js",
  "module": "./index.js",
  "types": "./index.d.ts",
  "files": [
    "*"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "test": "vitest",
    "test:run": "vitest run",
    "test:cover": "vitest run --coverage",
    "analyze": "lit-analyzer --strict src/**/*.ts",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier -w --list-different .",
    "lint:staged": "lint-staged",
    "prepare": "husky install",
    "package": "pnpm publish ./dist --access=public",
    "package:dry-run": "pnpm publish ./dist --access=public --dry-run"
  },
  "dependencies": {
    "lit": "^2.3.1"
  },
  "devDependencies": {
    "@jensk/rollup-plugin-package-process": "^0.0.8",
    "@types/jsdom": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "@vitest/coverage-c8": "^0.23.4",
    "eslint": "^8.24.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-lit": "^1.6.1",
    "happy-dom": "^6.0.4",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "lit-analyzer": "^1.2.1",
    "prettier": "^2.7.1",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-delete": "^2.0.0",
    "typescript": "^4.6.4",
    "vite": "^3.1.0",
    "vitest": "^0.23.4"
  }
}
